{
  "dashboard": {
    "title": "Métricas Financeiras",
    "panels": [
      {
        "id": 1,
        "title": "Valor Total de Notas (R$)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(valor_total_notas_processadas)",
            "legendFormat": "Total Processado"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyBRL"
          }
        }
      },
      {
        "id": 2,
        "title": "Lançamentos por Tipo",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (tipo) (lancamentos_financeiros_total)",
            "legendFormat": "{{tipo}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Notas por Fornecedor (Top 10)",
        "type": "bargauge",
        "targets": [
          {
            "expr": "topk(10, sum by (fornecedor) (notas_por_fornecedor_total))",
            "legendFormat": "{{fornecedor}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Valor Médio por Nota",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(valor_total_notas_processadas) / sum(notas_processadas_total)",
            "legendFormat": "Valor Médio"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyBRL"
          }
        }
      }
    ]
  }
}